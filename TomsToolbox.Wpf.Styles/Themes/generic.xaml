<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:styles="clr-namespace:TomsToolbox.Wpf.Styles">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/ButtonStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/CheckBoxStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/ComboBoxStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/MenuStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/GridSplitterStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/GroupBoxStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/ListBoxStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/RadioButtonStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/TabControlStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/TextBoxStyles.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/ToggleButtonStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/ToolTipStyle.xaml"/>
    <ResourceDictionary Source="/TomsToolbox.WpfStyles;component/Themes/DataGridStyle.xaml"/>
  </ResourceDictionary.MergedDictionaries>

  <!--  Brushes -->

  <SolidColorBrush x:Key="{x:Static styles:ResourceKeys.DisabledBrush}" Color="#F3F3F3" />

  <SolidColorBrush x:Key="{x:Static styles:ResourceKeys.BorderBrush}" Color="#CCCEDB" />

  <SolidColorBrush x:Key="{x:Static styles:ResourceKeys.AccentDarkBrush}" Color="#CCCEDB" />
  
</ResourceDictionary>